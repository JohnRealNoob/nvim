require("toggleterm").setup{
    -- size can be a number or function which is passed the current 
    function(term)
        if term.direction == "horizontal" then
            return 15
        elseif term.direction == "vertical" then
            return vim.o.columns * 5
        end
    end,

    open_mapping = [[<c-\>]],
    autochdir = true,
    persist_mode = true,
    direction = 'vertical',
    shell = vim.o.shell,
}
